{
  "dhp116:0.1": "LÜHIKESTE KOGU ",
  "dhp116:0.2": "DHAMMAVÄRSID ",
  "dhp116:0.3": "Kurjuse grupp ",
  "dhp116:1": "Kiirustagu hüveline, ",
  "dhp116:2": "kurja teadvust ohjaku! ",
  "dhp116:3": "Tõepoolest, aeglaselt loob pälvimusi ",
  "dhp116:4": "kurja nautiv meel. ",
  "dhp117:1": "Kui mees tegi kurja, ",
  "dhp117:2": "ärgu tehku ta seda ikka ja jälle. ",
  "dhp117:3": "Seda ei tuleks soovida. ",
  "dhp117:4": "Kurja kuhjumine on kannatus. ",
  "dhp118:1": "Kui mees tegi pälvimusi, ",
  "dhp118:2": "tehku ta seda ikka ja jälle. ",
  "dhp118:3": "Seda tuleks soovida. ",
  "dhp118:4": "Pälvimuste kuhjumine on õnn. ",
  "dhp119:1": "Kuri näeb head seni, ",
  "dhp119:2": "kuni (tema tehtud) hea pole küpsenud. ",
  "dhp119:3": "Kui kurjus on aga küpsenud, ",
  "dhp119:4": "näeb kuri kurja. ",
  "dhp120:1": "Hea näeb kurja seni, ",
  "dhp120:2": "kuni (tema tehtud) hea pole küpsenud. ",
  "dhp120:3": "Kui hea on aga küpsenud, ",
  "dhp120:4": "näeb hea head. ",
  "dhp121:1": "Ära mõtle: ",
  "dhp121:2": "„Väike kurjus ei tule mulle (tagasi)“. ",
  "dhp121:3": "Langevad veetilgad ",
  "dhp121:4": "täidavad isegi (suure) veeanuma. ",
  "dhp121:5": "Lapsik täitub kurjusega ka siis, ",
  "dhp121:6": "kui kogub seda vähehaaval. ",
  "dhp122:1": "Ära mõtle: ",
  "dhp122:2": "„Väike pälvimus ei tule mulle (tagasi)“ ",
  "dhp122:3": "Langevad veetilgad ",
  "dhp122:4": "täidavad isegi (suure) veeanuma. ",
  "dhp122:5": "Arukas täitub pälvimustega ka siis, ",
  "dhp122:6": "kui kogub neid vähehaaval. ",
  "dhp123:1": "Nii nagu suure vara ja väikese karavaniga ",
  "dhp123:2": "kaupmees väldib ohtlikke teid, ",
  "dhp123:3": "ning nagu elunautija (väldib) mürki, ",
  "dhp123:4": "nõnda tuleks vältida kurja. ",
  "dhp124:1": "Haavata käega saab ",
  "dhp124:2": "mürki peos kanda. ",
  "dhp124:3": "Mürk ei mõju haavata (käele) ",
  "dhp124:4": "ega kurja mittetegijale. ",
  "dhp125:1": "Kes solvab pahetut inimest, ",
  "dhp125:2": "puhast, plekitut meest, ",
  "dhp125:3": "selle lapsiku juurde naaseb kurjus ",
  "dhp125:4": "nagu vastutuult visatud peenike tolm. ",
  "dhp126:1": "Ühed ilmnevad üsas, ",
  "dhp126:2": "kurja tegijad nirajas, ",
  "dhp126:3": "õiglased lähevad taevasse, ",
  "dhp126:4": "tulvatud vaibuvad lõplikult. ",
  "dhp127:1": "Ei taevalaotuses, ei keset ookeani, ",
  "dhp127:2": "ei mägikoopas (ega kusagil mujal) selles maailmas ole paika, ",
  "dhp127:3": "kus seista kindlalt ",
  "dhp127:4": "pääsenuna (iseenda) kurjadest tegudest. ",
  "dhp128:1": "Ei taevalaotuses, ei keset ookeani, ",
  "dhp128:3": "pole paika, kus seista kindlalt, ",
  "dhp128:4": "nii, et surm ei võidaks. ",
  "dhp128:5": "Üheksanda, kurjuse grupi (lõpp). "
}