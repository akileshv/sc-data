{
  "dhp197:0.1": "LÜHIKESTE KOGU ",
  "dhp197:0.2": "DHAMMAVÄRSID ",
  "dhp197:0.3": "Õnne grupp ",
  "dhp197:1": "Me elame tõesti väga õnnelikult, ",
  "dhp197:2": "kes me vihkamiseta elame vihkajate seas. ",
  "dhp197:3": "Vihkavate inimeste seas ",
  "dhp197:4": "elame me vihkamiseta. ",
  "dhp198:1": "Me elame tõesti väga õnnelikult, ",
  "dhp198:2": "kes me haigusteta elame haigete seas. ",
  "dhp198:3": "Haigete inimeste seas ",
  "dhp198:4": "elame me haigusteta. ",
  "dhp199:1": "Me elame tõesti väga õnnelikult, ",
  "dhp199:2": "kes me ahnuseta elame ahnete seas. ",
  "dhp199:3": "Ahnete inimeste seas ",
  "dhp199:4": "elame me ahnustea. ",
  "dhp200:1": "Me elame tõesti väga õnnelikult ",
  "dhp200:2": "kes me midagi ei oma. ",
  "dhp200:3": "Me saame söönuks rõõmust, ",
  "dhp200:4": "nagu hiilgavad deevad. ",
  "dhp201:1": "Võit tekitab vihkamist, ",
  "dhp201:2": "võidetu elab dukkhas. ",
  "dhp201:3": "Rahunenult ja õnnes elab ",
  "dhp201:4": "võidust ja kaotusest loobunu. ",
  "dhp202:1": "Pole kirega võrdset tuld, ",
  "dhp202:2": "pole vihaga võrdset pahet, ",
  "dhp202:3": "Pole klammerdumise kogumikega võrdset dukkhat, ",
  "dhp202:4": "pole rahust kõrgemat õnne. ",
  "dhp203:1": "Nälg on ülim haigus, ",
  "dhp203:2": "moodustised on ülim dukkha; ",
  "dhp203:3": "kes teab seda olemasolule vastavalt, ",
  "dhp203:4": "(selle jaoks on) nibbaana ülim õnn. ",
  "dhp204:1": "Haiguste puudumine on ülim vara, ",
  "dhp204:2": "rahulolu on ülim rikkus, ",
  "dhp204:3": "usaldus on ülim sugulane, ",
  "dhp204:4": "nibbaana on ülim õnn. ",
  "dhp205:1": "Erakluse maitsest ",
  "dhp205:2": "ja rahunemise maitsest joobunu ",
  "dhp205:3": "on hirmuta ja kurjuseta, ",
  "dhp205:4": "(tema) maitseb dhammarõõmu jooki. ",
  "dhp206:1": "Suurepärane on näha arijaid, ",
  "dhp206:2": "õnn on nende seas viibida. ",
  "dhp206:3": "Lapsikute mittenägemine ",
  "dhp206:4": "oleks igavene õnn. ",
  "dhp207:1": "Tõepoolest, lapsikute seas elamine (toob) ",
  "dhp207:2": "kauakestvat kurbust, ",
  "dhp207:3": "lapsikuga kooselu on dukkha, ",
  "dhp207:4": "(just nagu elaks) kogu aeg sõbrata. ",
  "dhp207:5": "Kuid arukaga kooselu on õnn, ",
  "dhp207:6": "nagu ka kallite sugulastega kohtumine. ",
  "dhp208:1": "Seepärast, ",
  "dhp208:2": "järgi seda paljukuulnud vankumatut tarka, ",
  "dhp208:3": "seda kõlblusrakmeis vaimse eluviisiga arijat, ",
  "dhp208:4": "seda, väga arukat, tõelikku meest, ",
  "dhp208:5": "nagu kuu järgib tähtede teed. ",
  "dhp208:6": "Viieteistkümnenda, õnne grupi (lõpp). "
}