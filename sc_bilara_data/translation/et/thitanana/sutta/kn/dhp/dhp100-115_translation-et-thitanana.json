{
  "dhp100:0.1": "LÜHIKESTE KOGU ",
  "dhp100:0.2": "DHAMMAVÄRSID ",
  "dhp100:0.3": "Tuhande grupp ",
  "dhp100:0.4": "Ka tuhandest sisutust sõnast ",
  "dhp100:1": "Ka tuhandest sisutust sõnast ",
  "dhp100:2": "on parem ",
  "dhp100:3": "üks sisukas värss, ",
  "dhp100:4": "mille kuulmine rahustab. ",
  "dhp101:1": "Ka tuhandest sisutust värsist ",
  "dhp101:2": "on parem ",
  "dhp101:3": "üks sisukas värsisalm, ",
  "dhp101:4": "mille kuulmine rahustab. ",
  "dhp102:1": "Ka sadade sisutute sõnadega ",
  "dhp102:2": "värsside ettekandmisest ",
  "dhp102:3": "on parem üks dhammavärss, ",
  "dhp102:4": "mille kuulmine rahustab. ",
  "dhp103:1": "Tõepoolest, ülim vallutaja pole see, ",
  "dhp103:2": "kes võidab tuhandes lahingus ",
  "dhp103:3": "tuhat meest, vaid see, ",
  "dhp103:4": "kes võidab ühe — iseenda. ",
  "dhp104:1": "Tõepoolest, parem on alistada „mina“, ",
  "dhp104:2": "kui teised inimesed. ",
  "dhp104:3": "„Mina“ ohjanud inimene ",
  "dhp104:4": "tegutseb alati vaoshoitult. ",
  "dhp105:1": "Ei deeva, ei gandhabba, ",
  "dhp105:2": "ega Surm koos Brahmaga ",
  "dhp105:3": "suuda selle isiku võitu ",
  "dhp105:4": "kaotuseks muuta. ",
  "dhp106:1": "Kui sada aastat teha ",
  "dhp106:2": "kuust kuusse tuhat ohverdust, ",
  "dhp106:3": "ja vaid üks kord avaldada ",
  "dhp106:4": "hetkekski austust enesearendajale, ",
  "dhp106:5": "on see austusavaldus parem, ",
  "dhp106:6": "kui sada aastat ohverdamist. ",
  "dhp107:1": "Kui ka sada aastat ",
  "dhp107:2": "metsas tuld teenida, ",
  "dhp107:3": "ja vaid üks kord avaldada ",
  "dhp107:4": "hetkekski austust enesearendajale, ",
  "dhp107:5": "on see austusavaldus parem, ",
  "dhp107:6": "kui sada aastat ohverdamist. ",
  "dhp108:1": "Mis iganes ohverdusi või almuseid võiks ",
  "dhp108:2": "pälvimuste otsija maailmas terve aasta vältel ohverdada, ",
  "dhp108:3": "pole see väärt neljandikkugi pälvimustest, ",
  "dhp108:4": "mis saadakse kindlasihiliselt läinule austuse avaldamisega. ",
  "dhp109:0": "",
  "dhp109:1": "See, kes austab kõlbelisi, ",
  "dhp109:2": "ja teenib lakkamatult Auväärseid, ",
  "dhp109:3": "sel suurenevad neli dhammat: ",
  "dhp109:4": "eluiga, jume, õnn ja jõud. ",
  "dhp110:1": "Ka saja-aastasest ",
  "dhp110:2": "mittekeskenduva kõlbetu elust ",
  "dhp110:3": "on parem üks päev ",
  "dhp110:4": "kõlbelise džhaai elust. ",
  "dhp111:1": "Ka saja-aastasest ",
  "dhp111:2": "mittekeskenduva kehvaarulise elust ",
  "dhp111:3": "[on] parem üks päev ",
  "dhp111:4": "tarkusega džhaai elust. ",
  "dhp112:1": "Ka saja-aastasest ",
  "dhp112:2": "madala energiaga loiu elust ",
  "dhp112:3": "on parem üks päev ",
  "dhp112:4": "energilise ja resoluutse elust. ",
  "dhp113:1": "Ka saja-aastasest ",
  "dhp113:2": "tekkimist ja lakkamist mittenäinu elust ",
  "dhp113:3": "on parem üks päev ",
  "dhp113:4": "tekkimist ja lakkamist näinu elu. ",
  "dhp114:1": "Ka saja-aastasest ",
  "dhp114:2": "surmatuse teed mittenäinu elust ",
  "dhp114:3": "on parem üks päev ",
  "dhp114:4": "surmatuse teed näinu elu. ",
  "dhp115:1": "Ka saja-aastasest ",
  "dhp115:2": "ülimat dhammat mittenäinu elust ",
  "dhp115:3": "on parem üks päev ",
  "dhp115:4": "ülimat dhammat näinu elu. ",
  "dhp115:5": "Kaheksanda, tuhande grupi (lõpp). "
}