{
  "dhp21:0.1": "LÜHIKESTE KOGU ",
  "dhp21:0.2": "DHAMMAVÄRSID ",
  "dhp21:0.3": "Hoolikuse grupp ",
  "dhp21:1": "Hoolikus on tee surmatusse, ",
  "dhp21:2": "hooletus on tee surma. ",
  "dhp21:3": "Hoolikad ei sure, ",
  "dhp21:4": "need, kes hooletud, on nagu surnud. ",
  "dhp22:1": "Nõnda hoolikust läbinisti mõistnud ",
  "dhp22:2": "targad rõõmustavad hoolikuses, ",
  "dhp22:3": "ja pühenduvad ",
  "dhp22:4": "arijate pärusmaale liikumisele. ",
  "dhp23:1": "Need, visad džhaaid, ",
  "dhp23:2": "järjepidevalt ja jõuliselt pingutajad – ",
  "dhp23:3": "need arukad puudutavad nibbaanat, ",
  "dhp23:4": "kõrgeimat ikete rahunemist. ",
  "dhp24:1": "Pingutava, teadliku, ",
  "dhp24:2": "puhaste tegude ja rahuliku käitumisega, ",
  "dhp24:3": "tajusid ohjava ning dhammas elava ",
  "dhp24:4": "hoolika maine kasvab. ",
  "dhp25:1": "Pingutuse, hoolikuse, ",
  "dhp25:2": "meele ohjeldamise ja mõõdukusega ",
  "dhp25:3": "rajagu arukas saar, ",
  "dhp25:4": "mida üleujutus ei uputa! ",
  "dhp26:1": "Vähearukad, lapsikud inimesed ",
  "dhp26:2": "toimivad hooletult, ",
  "dhp26:3": "arukas aga hoiab hoolikust ",
  "dhp26:4": "nagu suurimat rikkust. ",
  "dhp27:1": "Ärge ühinege hooletusega, ",
  "dhp27:2": "naudinguga, armastusega ega lähedusega! ",
  "dhp27:3": "Ainult hoolikas džhaanaja ",
  "dhp27:4": "saavutab tõepoolest suure õnne! ",
  "dhp28:1": "Hoolikusega hooletuse ",
  "dhp28:2": "eemaldanud tark, ",
  "dhp28:3": "tõusnud leinatuse tarkuse kindlusesse, ",
  "dhp28:4": "näeb leinavaid inimesi ",
  "dhp28:5": "nagu mäelseisja, ",
  "dhp28:6": "kes vaatleb lapsikuid inimesi all tasandikul. ",
  "dhp29:1": "Hooletute seas hoolikas ",
  "dhp29:2": "ja magajate seas ärkvel arukas ",
  "dhp29:3": "liigub edasi nii, nagu kiire ratsu ",
  "dhp29:4": "liigub edasi nii, nagu kiire ratsu ",
  "dhp30:0": "möödub jõuetust hobusest. ",
  "dhp30:1": "Hoolikuse läbi sai Maghavā ",
  "dhp30:2": "ülimaks deevaks. ",
  "dhp30:3": "Hoolikust ülistatakse, ",
  "dhp30:4": "hooletust aga laidetakse alati. ",
  "dhp31:1": "Hoolikusele pühendunud ",
  "dhp31:2": "ja hooletuses ohtu nägev bhikkhu ",
  "dhp31:3": "läheb edasi nagu tuli, ",
  "dhp31:4": "põletades kõik köidikud, nii väikesed kui suured. ",
  "dhp32:1": "Hoolikusele pühendunud ",
  "dhp32:2": "ja hooletuses ohtu nägev bhikkhu ",
  "dhp32:3": "pole suuteline tagasi langema, ",
  "dhp32:4": "kuna on nibbaana vahetus läheduses. ",
  "dhp32:5": "Teise, hoolikuse grupi (lõpp). "
}