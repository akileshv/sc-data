{
  "dhp157:0.1": "LÜHIKESTE KOGU ",
  "dhp157:0.2": "DHAMMAVÄRSID ",
  "dhp157:0.3": "Mina grupp ",
  "dhp157:0.4": "",
  "dhp157:1": "Ennast kalliks pidav ",
  "dhp157:2": "valvaku end hästi valvsalt; ",
  "dhp157:3": "kolmest ühel valvekorral ",
  "dhp157:4": "olgu tark ärkvel. ",
  "dhp158:1": "Iseendas esmalt ",
  "dhp158:2": "sobilik kehtestagu, ",
  "dhp158:3": "seejärel [alles] teisi õpetagu. ",
  "dhp158:4": "Tark ei peaks [olema] ebapuhas. ",
  "dhp159:1": "Käitugu ta ise alati nii, ",
  "dhp159:2": "nagu õpetab teisi. ",
  "dhp159:3": "Tõepoolest, taltunu on hästi ohjatud. ",
  "dhp159:4": "Ennast on tõesti raske ohjata. ",
  "dhp160:1": "Mina, tõepoolest olen enda kaitsja; ",
  "dhp160:2": "tõesti, kes muu olekski (minu) kaitsja? ",
  "dhp160:3": "Enda hea ohjamisega, tõepoolest, saavutab ",
  "dhp160:4": "kaitsja raskesti saavutatava. ",
  "dhp161:1": "Tõepoolest, enda tehtud on kuri, ",
  "dhp161:2": "endast sündinud, endast pärit; ",
  "dhp161:3": "kurjus purustab kehva aruga inimese, ",
  "dhp161:4": "nagu teemant purustab kristalli. ",
  "dhp162:1": "Kes on läbinisti halva kõlblusega, ",
  "dhp162:2": "on kui saalapuu üle laotunud ronitaim; ",
  "dhp162:3": "too teeb endale sama, ",
  "dhp162:4": "mida vaenlane tahab talle. ",
  "dhp163:1": "Kerge on endale teha ",
  "dhp163:2": "mittehead ja kasutut. ",
  "dhp163:3": "Tõepoolest, ülimalt raske on aga iseendale ",
  "dhp163:4": "head ja kasulikku teha. ",
  "dhp164:1": "Kes põlgab arahantide õpetust ",
  "dhp164:2": "ja arija dhammas elamist, ",
  "dhp164:3": "on kehva arukusega ",
  "dhp164:4": "ja valesse vaatesse klammerdunud, ",
  "dhp164:5": "selle teo viljad ",
  "dhp164:6": "on nagu ennasthävitaval bambusel. ",
  "dhp165:1": "Tõepoolest, ise tehakse kurja, ",
  "dhp165:2": "ise end määritakse. ",
  "dhp165:3": "Ise [jäetakse] kuri tegemata, ",
  "dhp165:4": "ise end puhastatakse. ",
  "dhp165:5": "Puhtus ja ebapuhtus sõltuvad endast, ",
  "dhp165:6": "keegi ei saa teist puhastada. ",
  "dhp166:0": "Ärgem jätkem enda (vaimseid) saavutusi hooletusse ",
  "dhp166:1": "teiste (vaimsete) saavutuste nimel. ",
  "dhp166:2": "(ükskõik) kui suured (need ka poleks). ",
  "dhp166:3": "Ise ülimaid teadmisi mõistnu ",
  "dhp166:4": "(püüelgu edasi kuni) tõelises saavutuses kinnistumiseni. ",
  "dhp166:5": "Kaheteistkümnenda, mina grupi (lõpp). "
}